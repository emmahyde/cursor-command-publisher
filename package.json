{
  "name": "cursor-command-publisher",
  "version": "1.0.0",
  "description": "Dynamic MCP server that loads command templates from markdown files with variable substitution. Designed for Cursor and Claude.",
  "type": "module",
  "bin": {
    "cursor-command-publisher": "./build/index.js"
  },
  "files": ["build", "README.md", "LICENSE"],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cursor",
    "claude",
    "command-publisher",
    "dynamic-tools",
    "templates"
  ],
  "author": "Emma Hyde",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emmahyde/cursor-command-publisher.git"
  },
  "bugs": {
    "url": "https://github.com/emmahyde/cursor-command-publisher/issues"
  },
  "homepage": "https://github.com/emmahyde/cursor-command-publisher#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "dev": "node --loader ts-node/esm src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.11.24",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
