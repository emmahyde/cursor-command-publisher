{
  "name": "mcp-command-server",
  "version": "1.0.0",
  "description": "MCP server with dynamic command loading from templates",
  "type": "module",
  "bin": {
    "mcp-command-server": "./build/index.js"
  },
  "files": ["build"],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "watch": "tsc --watch",
    "dev": "node --loader ts-node/esm src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.11.24",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
